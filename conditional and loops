 conditional
public class lab0022ifelsestament {
     public static void main(String[]args)
     {
         int age =20;
         //allowed to vote
         if (age>18)
         {
             System.out.println("allowed to vote");
         }else {
             System.out.println("not allowed to vote ");
         }
     }
}


