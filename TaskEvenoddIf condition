import java.util.Scanner;

public class lab0026oddevenprogram {
    public static void main(String[]args)
    {
        //create a user input
        //check weather input even or odd number
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the number is even or odd");
        int num= sc.nextInt();
        //modulas
        //%
        //10%2 =even >0
        //10%2=odd>1
        if (num%2==0)
        {
            System.out.println("number is even");

        }else {
            System.out.println("odd number");
        }
    }
}
